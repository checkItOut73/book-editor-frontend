{
  "include": ["./src/server/**/*", "./src/browser/components/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["node", "jest", "react", "react-dom", "webpack", "webpack-dev-middleware", "webpack-hot-middleware"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@browser/*": ["src/browser/*"],
      "@server/*": ["src/server/*"],
      "@components/*": ["src/browser/components/*"],
      "@configs/*": ["build/configs/*"]
    }
  }
}
